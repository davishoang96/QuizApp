@using Microsoft.AspNetCore.Components.Authorization
@rendermode InteractiveServer

<RadzenSidebar Expanded="IsSideBarExpanded">
    <RadzenPanelMenu>
        <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />
        <AuthorizeView Roles="Admin">
            <Authorized>
                <RadzenPanelMenuItem Text="Quizzes Manager" Path="/quiz-manager" Icon="assignment" />
                <RadzenPanelMenuItem Text="Dashboard" Path="/dashboard" Icon="dashboard" />
            </Authorized>
         </AuthorizeView>
    </RadzenPanelMenu>
</RadzenSidebar>

@code{
    [Parameter]
    public bool IsSideBarExpanded { get; set; }
}