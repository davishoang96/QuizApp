@page "/counter"
@using QuizApp.Api
@inject DialogService DialogService;
@inject IQuizApiClient QuizApiClient;
@attribute [Authorize]

<PageTitle>Secure Api</PageTitle>

<RadzenText Text="@Text" />

<RadzenButton Text="Click me!" Click="@ClickMe" />
<RadzenButton Text="Call Api" Click="@CallApi" />

@code {

	private string Text = "Hello, world!";

	private async Task ClickMe()
	{
		Text = "Hello, Radzen!";
		await DialogService.Alert("Hello, Radzen!");
	}

	private async Task CallApi()
	{
		var response = await QuizApiClient.GetScoreEndpointAsync();
		Text = $"This data comes from an internal API: {string.Join(",", response)}";
	}
}